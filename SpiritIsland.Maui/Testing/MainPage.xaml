<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:si="clr-namespace:SpiritIsland.Maui"
			 x:Class="SpiritIsland.Maui.MainPage">

	<VerticalStackLayout>

		<!-- Slots -->
		<CollectionView x:Name="Slots" BackgroundColor="Blue" ItemsLayout="VerticalGrid,3" >
			
			<CollectionView.ItemTemplate>
				<DataTemplate x:DataType="si:CardSlotModel" >
					<si:CardSlotView WidthRequest="120" />
				</DataTemplate>
			</CollectionView.ItemTemplate>
		</CollectionView>


		<Label Text="The Gingham dog and calico cat, side by side on the table sat. Twas half past twelve and what do you think" 
			   LineBreakMode="CharacterWrap"
			   WidthRequest="300" HeightRequest="80"
			   BackgroundColor="LightCoral" 
			   HorizontalOptions="Center" 
		/>

	</VerticalStackLayout>
	
</ContentPage>
