<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:si="clr-namespace:SpiritIsland.Maui"
			 x:DataType="si:GrowthGroupModel"
			 x:Class="SpiritIsland.Maui.GrowthGroupView">

	<Border Stroke="Black" BackgroundColor="Beige"
			StrokeShape="RoundRectangle 5,5,5,5" 
			StrokeThickness="2" Padding="1,1" HorizontalOptions="Center" >
		<CollectionView ItemsSource="{Binding Actions}" ItemsLayout="HorizontalList" MaximumHeightRequest="80" >
			<CollectionView.ItemTemplate>
				<DataTemplate x:DataType="si:GrowthActionModel" >
					<si:GrowthActionView BindingContext="{Binding .}" Padding="1" WidthRequest="56" />
				</DataTemplate>
			</CollectionView.ItemTemplate>
		</CollectionView>
	</Border>


</ContentView>
