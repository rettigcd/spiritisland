<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:si="clr-namespace:SpiritIsland.Maui"
			 x:DataType="si:GrowthActionModel"
			 x:Class="SpiritIsland.Maui.GrowthActionView">

	<ContentView.Resources>
		<si:OptionStateToColorConverter x:Key="optionState" />
	</ContentView.Resources>

	<Border x:Name="Border" StrokeThickness="3" Stroke="{Binding State,Converter={StaticResource optionState}}" Padding="1" >
		<!-- Tap -->
		<Border.GestureRecognizers>
			<TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
			<DragGestureRecognizer DragStarting="DragGestureRecognizer_DragStarting" />
		</Border.GestureRecognizers>
		<!-- Image -->
		<Image Source="{Binding ImageSource}" VerticalOptions="Center" />
	</Border>

</ContentView>
