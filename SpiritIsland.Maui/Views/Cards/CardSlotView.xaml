<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:si="clr-namespace:SpiritIsland.Maui"
			 xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
			 x:DataType="si:CardSlotModel"
			 x:Class="SpiritIsland.Maui.CardSlotView">

	<Border StrokeShape="RoundRectangle 10,10,10,10" x:Name="DropArea" BackgroundColor="Gray">
		<Border.GestureRecognizers>
			<DropGestureRecognizer AllowDrop="True" 
				DragOver="DropGestureRecognizer_DragOver" 
				DragLeave="DropGestureRecognizer_DragLeave" 
				Drop="DropGestureRecognizer_Drop" />
		</Border.GestureRecognizers>
		<Grid>
			<!-- Card -->
			<si:CardSummaryView BindingContext="{Binding Card}" IsVisible="{Binding HasCard,Source={RelativeSource AncestorType={x:Type si:CardSlotModel}}}" >
				<si:CardSummaryView.GestureRecognizers>
					<!-- Drag -->
					<DragGestureRecognizer DragStarting="DragGestureRecognizer_DragStarting" CanDrag="{Binding IsDraggable}" />
					<!-- Tap - show deatils -->
					<TapGestureRecognizer Command="{Binding SelectCommand,Source={RelativeSource AncestorType={x:Type si:CardSlotModel}}}" NumberOfTapsRequired="1" />
				</si:CardSummaryView.GestureRecognizers>
			</si:CardSummaryView>
		</Grid>

	</Border>

</ContentView>
