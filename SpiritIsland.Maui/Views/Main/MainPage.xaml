<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:si="clr-namespace:SpiritIsland.Maui"
			 x:Class="SpiritIsland.Maui.MainPage">

	<VerticalStackLayout>
		<Label Text="Welcome to Spirit Island" FontSize="16" HorizontalOptions="Center" Margin="10,50,10,50" />
		<Button x:Name="CurrentGameButton" Text="↩️ Current Game" Clicked="CurrentGameButton_Clicked" IsVisible="False" Margin="3" Padding="20" />
		<Button x:Name="NewGameButton" Text="New Game" Clicked="NewGameButton_Clicked" Margin="3" Padding="20"/>
	</VerticalStackLayout>
	
</ContentPage>
