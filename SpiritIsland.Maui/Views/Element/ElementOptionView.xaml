<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpiritIsland.Maui.ElementOptionView"
 			 xmlns:si="clr-namespace:SpiritIsland.Maui"
			 x:DataType="si:ElementOptionModel"
			 >

	<ContentView.Resources>
		<si:OptionStateToColorConverter x:Key="optionState" />
	</ContentView.Resources>

	<Grid BackgroundColor="Beige" Padding="2">
		<Grid.GestureRecognizers>
			<TapGestureRecognizer Command="{Binding Tapped}" />
		</Grid.GestureRecognizers>

		<Ellipse x:Name="OptionEllipse" StrokeThickness="4" 
				Stroke="{Binding State,Converter={StaticResource optionState}}" 
				HeightRequest="45" WidthRequest="45" />
		<Image Source="{Binding Image}" 
				VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" HeightRequest="40" />
	</Grid>
</ContentView>
