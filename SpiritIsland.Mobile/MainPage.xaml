<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="SpiritIsland.Mobile.MainPage"
			 BackgroundColor="{DynamicResource SecondaryColor}">

	<Grid BackgroundColor="Yellow">
		<StackLayout Orientation="Horizontal" x:Name="GrowthDrawer">
			<Button 
				Text="Growth"
				FontAttributes="Bold"
				SemanticProperties.Hint="Counts the number of times you click"
				VerticalOptions="Start"
				Rotation="270"
				x:Name="GrowthTab"
				Clicked="GrowthTab_Clicked"
			/>
			<BoxView BackgroundColor="Red" HorizontalOptions="FillAndExpand"></BoxView>
		</StackLayout>

		<StackLayout Orientation="Horizontal" x:Name="PresenceDrawer">
			<Button 
				Text="Presence"
				FontAttributes="Bold"
				SemanticProperties.Hint="Counts the number of times you click"
				VerticalOptions="Center"
				Rotation="270"
				x:Name="PresenceTab"
				Clicked="PresenceTab_Clicked"
			/>
			<BoxView BackgroundColor="Red" HorizontalOptions="FillAndExpand"></BoxView>
		</StackLayout>

		<StackLayout Orientation="Horizontal" x:Name="InnatesDrawer">
			<Button 
				Text="Innates"
				FontAttributes="Bold"
				SemanticProperties.Hint="Counts the number of times you click"
				VerticalOptions="End"
				Rotation="270"
				x:Name="InnatesTab"
				Clicked="InnatesTab_Clicked"
			/>
			<BoxView BackgroundColor="Red" HorizontalOptions="FillAndExpand"></BoxView>
		</StackLayout>
		
	</Grid>
	
